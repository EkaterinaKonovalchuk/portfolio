
script(type="text/x-template")#slider-container
    .works-slider
        display(
            :works="works",
            :currentWork="currentWork",
            :currentIndex="currentIndex"
            @slide="handleSlide"
        )  
        info(
            :currentWork="currentWork"
        )
script(type="text/x-template")#slider-display
    .works-slider__pics(:data-slide="currentIndex + 1")
        .works-slider__fullpic-container
            img(:src="currentWork.photo" alt="").works-slider__fullpic
            btns(
               @slide="direction => $emit('slide', direction)"
            )
            thumbs(
                :works="reversedWorks"
                :currentWork="currentWork"
            )   

script(type="text/x-template")#slider-btns
    .works-slider__buttons
        a(href="#" @click.prevent="$emit('slide','next')").works-slider__btn.works-slider__btn-next
        a(href="#" @click.prevent="$emit('slide','prev')").works-slider__btn.works-slider__btn-prev  

script(type="text/x-template")#slider-thumbs
    ul.works-slider__thumbs
        li.works-slider__thumbs-item(v-for="work in works" :key="work.id")
            a.works-slider__thumbs-link.active(href="")
                img(:src="work.photo" alt="").works-slider__thumb
script(type="text/x-template")#slider-info
    .works-slider__data
        tags(
            :tagsArray="tagsArray"
        )
        .works-slider__title.title-section.title-section_middle {{currentWork.title}}
        .works-slider__text {{currentWork.desc}}

script(type="text/x-template")#slider-tags
    ul.tags
        li.tags-item(v-for="tag in tagsArray")
            .tag {{tag}}           