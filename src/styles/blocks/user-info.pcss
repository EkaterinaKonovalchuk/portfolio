.user-info{
    display:flex;
    padding-left:15%;
    padding-right:15%;

    @include tablets{
        text-align: center;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
}

.user-info__name{
    color: #414c63;
    font-size: 72px;
    font-weight: 800;
    line-height: 60px;

    @include phones{
        font-size:48px;
    }
}

.user-info__desc{
    font-size: 23px;
    font-weight: 600;
    line-height: 1.875rem;
    opacity: 0.4;
}